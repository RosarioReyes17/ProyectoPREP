
@{
    Layout = null;
}

@using System.Security.Claims



<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Servicio Nacional de Salud</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #005476;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            margin: 0;
        }

        .headerlogin {
            text-align: center;
            margin-bottom: 20px;
        }

            .headerlogin img {
                width: 150px; /* Ajusta el tamaño del logo según tus necesidades */
                margin-bottom: 10px;
            }

            .headerlogin h1 {
                font-size: 20px;
                color: #000000;
                margin: 0;
                margin-bottom:30px;
            }

        .login-form {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            width: 330px;
            text-align: left;
            width: 488px;
            height: 615px;
        }

            .login-form label {
                display: block;
                margin-bottom: 8px;
                color: #555; /* Cambia el color del texto según tus preferencias */
               
            }



            .login-form input {
                width: 100%;
                padding: 10px;
                margin-bottom: 16px;
                border: 1px solid #ccc;
                border-radius: 4px;
                box-sizing: border-box;
            }

            .login-form button {
                background-color: #0056b3;
                color: #fff;
                border: none;
                padding: 12px;
                border-radius: 4px;
                cursor: pointer;
            }

                .login-form button:hover {
                    background-color: #004494;
                }

        .error-message {
            color: #fe7575;
            text-align: center;
            margin-top: 10px;
        }

        .footer-text {
            color: #fff;
            text-align: center;
            font-size: 0.875rem;
            position: absolute;
            bottom: 1rem;
            width: 100%;
        }

        .center {
            text-align: center;
        }

    </style>
</head>
<body>

    <div class="login-form wow fadeIn" autocomplete="off">
        <div class="headerlogin">
            <img src="/Content/img/vectores/logoazul.svg" alt="SNS Logo">
            <h1 class="uppercase">FORMULARIO DE SELECCIÓN PROXILAXIS <br />PREP-EXPOSICIÓN</h1>
        </div>
        <form asp-action="Login" asp-controller="Home" method="post">
            <label style="color:black; margin-bottom:5%" for="Usuario">Utilice su nombre de usuario (cédula) y contraseña para acceder a la Intranet del SNS.</label>
            <div>
                <label for="Usuario">Cédula</label>
                <input autocomplete="off" type="text" minlength="13" maxlength="13" data-mask="999-9999999-9" title="La cédula es requerida." placeholder="Cédula" id="Usuario" name="Usuario">
            </div>
            <div>
                <label for="Password">Contraseña</label>
                <input autocomplete="off" type="password" placeholder="Contraseña" id="Password" name="Password" title="El password es requerido.">
            </div>
            <div class="center" style="margin-top: 30px">
                <button type="submit" class="btn" style="background-color: #005476; color: #fff;" id="Ejecutar" name="Ejecutar">Iniciar Sesión</button>
            </div>
            <div class="error-message" id="divMensaje">
                <div class="validation-summary-valid" data-valmsg-summary="true">
                    <ul>
                        <li style="display:none"></li>
                    </ul>
                </div>
            </div>
        </form>

        <div class="text-center">
            <div style="color:black; margin-top: 60px;">
                &copy; @{
                    ViewBag.Year = DateTime.Now.Year;
                } @ViewBag.Year Servicio Nacional de Salud. Todos los Derechos Reservados.
            </div>
        </div>
        <div class="center">
            <div id="loading"></div>
            <div id="notify"></div>
        </div>
    </div>

</body>
</html>
