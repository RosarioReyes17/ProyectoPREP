@model ProyectoPREP.Models.VwPrepGestionUsuario

<h2>Cambiar Roles a Usuario</h2>

<form asp-controller="Roles" asp-action="CambiarRol" method="post">
    @Html.HiddenFor(x=>x.IdUsuario)


    <h4>Formulario de Cambiar Roles a Usuario</h4>

    <label>ID: @Model.IdUsuario </label><br />
    <label>Nombre: @Model.NombreApellidos</label><br />
    <label>Usuario: @Model.Usuario</label><br />
    <label>Centro: @Model.NombreCentro</label><br />
    <label>Rol actual: @Model.Roles</label><br /><br />


    <div class="editor-label">
        <strong>Rol:</strong>
    </div>
    <div class="editor-field col-5">
        <select class="form-control" id="Rol" name="IdRol" required="required">
            <option value="">Seleccione un Rol</option>
            <option value="1">Administrador</option>
            <option value="5">Psicólogo Medicos</option>
        </select>
    </div>

    <br>


    <div style="display: flex; align-items: center;">
        <button type="submit" class="btn btn-success">Cambiar Rol</button>
        <a asp-controller="Roles" asp-action="VerUsuarios" class="btn btn-danger" style="margin-left: 10px;">
            <i class="fa-solid fa-cancel"></i> Cancelar
        </a>
    </div>



</form>



