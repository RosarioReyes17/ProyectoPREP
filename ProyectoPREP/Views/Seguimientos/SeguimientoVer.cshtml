
@model List<Seguimiento>


<div class="pull-right" style="padding:10px">

    <a title="Agregar Seguimiento" class="btn btn-success" href="@Url.Action("SeguimientoPrep", "Seguimientos", new { id = ViewBag.IdDatos })">
        <i class="glyphicon glyphicon-plus"></i>
    </a>
</div>  



<h2>Seguimientos por Paciente</h2>
<table class="table">
    <tbody>
        <tr>
            <th>
                Id
            </th>
            <th>
                Nombres
            </th>
            <th>
                Apellidos
            </th>
            <th>Sexo</th>
            <th>Nacionalidad</th>
        </tr>
        <tr>

            <td>@ViewBag.IdDatos</td>
            <td>@ViewBag.Nombre</td>
            <td>@ViewBag.Apellido</td>
            <td>@ViewBag.Sexo</td>
            <td>@ViewBag.nacionalidad</td>
        </tr>
    </tbody>
</table>

<h5>Seguimientos</h5>

<table class="table">
    <thead>
        <tr>
            <th>
                ID Seguimiento
            </th>
            <th>Fecha Seguimiento</th>
            <th>Próximo Seguimiento</th>
            <th>
                Resultado Prueba VIH
            </th>
            <th>Fecha de Prueba VIH</th>
            <th>Observaciones</th>
            <th>
                Acciones
            </th>


        </tr>
    </thead>
    <tbody>
       
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>@item.FechaRegistroSeguimiento.Value.ToString("dd-MM-yyyy")</td>
                <td>@item.FechaProximoSeguimiento.Value.ToString("dd-MM-yyyy")</td>
                <td>@item.ResultadoPruebaVih</td>
                @if (item.FechaPruebaVih.HasValue)
                {
                    <td>@item.FechaPruebaVih.Value.ToString("dd-MM-yyyy")</td>
                }
                else
                {
                    <td>Sin Realizar</td>
                }
                <td>@item.Observaciones</td>


                <td>
                    <a class="btnSeguimiento2" href="~/Seguimientos/SeguimientoVerPorId/@item.Id">Ver Seguimiento</a> |
                    <a class="btnSeguimiento3" href="~/Seguimientos/Editar/@item.Id">Editar Seguimiento</a>
                </td>

            </tr>


        }

    </tbody>
</table>

