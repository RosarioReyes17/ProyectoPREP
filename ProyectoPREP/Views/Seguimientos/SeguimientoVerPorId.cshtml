@model Seguimiento

<div class="form-title">
    <h4>Seguimientos de la PreP</h4>
</div>

<div divinfo="">

    <h5>Información del Paciente</h5>
    <strong>ID PREP:</strong>
    <span>@ViewBag.IdDatos</span>
    <br>

    <strong>Paciente PREP:</strong>
    <span id="spPacienteNombre" name="spEsatus">@ViewBag.Nombre</span>
    <br>

</div>

<form asp-action="SeguimientoPrep" asp-controller="Seguimientos" method="post">
    <input type="hidden" id="IdDatos" name="IdDatos" value="@ViewBag.IdDatos" />
    <input name="" id="sexo" type="hidden" value="@ViewBag.Sexo" />
    <input name="" id="genero" type="hidden" value="@ViewBag.Genero" />


    <div id="divFormPrEP">
        <div id="divDatosGenerales">

            <table class="table">
                <tbody>

                    <tr style="display:none">
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>

                        <td colspan="1">
                            Fecha de registro de seguimiento:
                            <div class="form-group col-md-8">

                                <input id="txtFechaSeguimiento" onkeydown="return false" disabled asp-for="FechaRegistroSeguimiento" name="FechaRegistroSeguimiento" class="form-control col-sm-3 date" type="date">

                            </div>

                        </td>
                      

                    </tr>
                    <tr>
                        <td colspan="2">
                            Signos Vitales:
                            <br>
                            <div style="display:flex">

                                <label style="width:26px">TA:</label>
                                <input type="number" disabled asp-for="SignosVitalesTa" id="SignosVitalesTa" name="SignosVitalesTa" min="0" class="form-control2"> mmHg

                            </div>
                            <br>
                            <div style="display:flex">

                                <label style="width:26px">FC:</label>

                                <input type="number" id="SignosVitalesFc" disabled asp-for="SignosVitalesFc" name="SignosVitalesFc" min="0" class="form-control2"> l/min

                            </div>
                            <br>
                            <div style="display:flex">

                                <label style="width:26px">FR:</label>

                                <input type="number" id="SignosVitalesFr" disabled asp-for="SignosVitalesFr" name="SignosVitalesFr" min="0" class="form-control2"> r/min

                            </div>
                        </td>

                        <td colspan="2">
                            Medidas Antropometrícas:
                            <br>
                            <label style="width:105px">Peso:</label>

                            <input id="Peso" disabled asp-for="Peso" name="Peso" type="number" min="0" class="form-control2" placeholder="Introduzca su Peso."> Lbs.
                            <br>
                            <label style="width:105px">Talla Pies:</label>

                            <input id="TallaPies" disabled asp-for="TallaPies" name="TallaPies" class="form-control2" type="number" min="1" placeholder="Introduzca su Talla en Pies.">
                            <br>
                            <label style="width:105px">Talla Pulgadas:</label>

                            <input id="TallaPulgadas" disabled asp-for="TallaPulgadas" name="TallaPulgadas" class="form-control2" type="number" min="1" placeholder="Introduzca su Talla en Pulgadas.">

                        </td>
                    </tr>

                    <tr id="creatinina" class="form-invisible">
                        <td colspan="2">
                            <div class="form-group col-md-8">
                                Resultado de Creatinina(Plasmatica):
                                <br>
                              @*   <input id="CreatininaValor" required disabled onchange="calcularCreatinina(value);" name="CreatininaValor" step=".1" type="number" min="0.1" max="60" style="width: 100%;" class=" habilitarCreatinina form-control col-sm-2">
                                <br>
                                <br> *@
                                Resultado:
                                <input id="ResultadoCreatinina" disabled readonly asp-for="ResultadoCreatinina" name="ResultadoCreatinina" class="form-control habilitarCreatinina" />
                                <br>NOTA: Recuerde realizar la prueba de Creatinina cada 6 meses.
                            </div>

@*                             <div class="form-group col-md-8">
                                Fecha:
                                <input id="txtFechaResultadoCreatinina" onkeydown="return false" disabled name="txtFechaResultadoCreatinina" class="form-control col-sm-3 habilitarCreatinina " type="date">
                            </div>
 *@                            
                        </td>
                        <td colspan="2" style="display:none">

                            Rango valores de Creatinina
                            <br>
                            <ul>
                                <li> 61-70 ml/min</li>
                                <li>71-80 ml/min</li>
                                <li>81-90 ml/min</li>
                                <li>91-100 ml/min</li>
                                <li>&gt;100 ml/min</li>
                            </ul>
                            <br>
                            <span style="font-size:1em;">
                                - Hombres:[140-(edad) x Peso(Kg)]/[72 x Creatinina plasmatica]<br>
                                - Mujeres:[140-(edad) x Peso(Kg) x 0.85]/[72 x Creatinina plasmatica]<br>
                                - Utilizar la fórmula de mujeres en mujeres biológicas y Trans que <br>
                                tengan más de 6 meses en terapia de reemplazo hormonal.

                            </span>
                        </td>
                    </tr>
                    <tr id="VIHp">

                        <td colspan="2">
                            Fecha de realización(Prueba VIH):
                            <br>
                            <div class="form-group col-md-4">
                                <input id="txtFechaRealizacionPrueba" onkeydown="return false" disabled asp-for="FechaPruebaVih" name="FechaPruebaVih" class="form-control col-3 date" type="date">
                            </div>
                        </td>
                        <td colspan="2">
                            Repetición de la Prueba VIH:
                            <br>
                            Resultado:
                            <div class="radio radio-info">
                                <input id="rdVIH1" class="styled" onclick="resultadoVIH(value);" type="radio" disabled asp-for="ResultadoPruebaVih" name="ResultadoPruebaVih" value="Negativo">
                                <label for="rdVIH1">
                                    Negativo.
                                </label>
                            </div>

                            <div class="radio radio-info">
                                <input id="rdVIH2" class="styled" type="radio" onclick="resultadoVIH(value);" disabled      asp-for="ResultadoPruebaVih" name="ResultadoPruebaVih" value="Positivo">
                                <label for="rdVIH2">

                                    Positivo
                                </label>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="1">
                            <label>
                                ¿Se consulto acerca de los signos y síntomas de infección aguda por VIH?
                            </label>
                            <div class="radio radio-info">
                                <input id="chkconsultaVIH1" onclick="tieneSintomas(this.value);" disabled asp-for="ConsultaSignosInfeccion" name="ConsultaSignosInfeccion" class="styled" type="radio" value="Si">
                                <label for="chkconsultaVIH1">
                                    Si
                                </label>
                            </div>
                            <div class="radio radio-info">
                                <input id="chkconsultaVIH2" onclick="tieneSintomas(this.value);" disabled asp-for="ConsultaSignosInfeccion" name="ConsultaSignosInfeccion" class="styled" type="radio" value="No">
                                <label for="chkconsultaVIH2">
                                    No
                                </label>
                            </div>
                        </td>
                        <td colspan="1" style="width:310px">
                            <input type="radio" disabled id="check1" asp-for="Linfadenopatias" name="Linfadenopatias" class="chSignos" disabled="disabled" value="true"> Linfadenopatias cervicales e inguinales
                            <br>
                            <input type="radio" disabled id="check2" asp-for="FiebreDesconocida" name="FiebreDesconocida" class="chSignos" disabled="disabled" value="true"> Fiebre de origen desconocido
                            <br>
                            <input type="radio" disabled id="check3" asp-for="DiarreaProlongada" name="DiarreaProlongada" class="chSignos" disabled="disabled" value="true"> Diarrea prolongada de origen desconocido
                            <br>
                            <input type="radio" disabled id="check4" asp-for="ErupcionesPiel" name="ErupcionesPiel" class="chSignos" disabled="disabled" value="true"> Erupciones en la piel
                            <br>
                            <input type="radio" disabled id="check5" asp-for="InfeccionesRecurrentes" name="InfeccionesRecurrentes" class="chSignos" disabled="disabled" value="true"> Infecciones Recurrentes
                            <br>
                            <input type="radio" disabled id="check6" asp-for="HepatoEsplenomegalia" name="HepatoEsplenomegalia" class="chSignos" disabled="disabled" value="true"> Hepato/esplenomegalia
                            <br>
                        </td>
                        <td colspan="1">
                            <div style="margin-inline:50px">
                                ¿Nueva ITS Diagnosticada?
                                <br>

                                <select style="width:180px" class="form-control" id="ddlNuevaEnfermedad" disabled asp-for="NuevaItsdiagnosticada" name="NuevaItsdiagnosticada">
                                    <option value="">--Seleccione--</option>
                                    <option value="No">No</option>
                                    <option value="Sifilis">Sifilis</option>
                                    <option value="Hepatitis B">Hepatitis B</option>
                                    <option value="Hepatitis C">Hepatitis C</option>
                                </select>
                            </div>
                        </td>
                        <td colspan="1" style="">
                            ITS sindrómico
                            <input id="ITDSindromico2" class="styled" onclick="habilitarInputsindrómico(this.value);" type="radio" disabled asp-for="ItsDiagnosticoPresuntivo" name="ItsDiagnosticoPresuntivo" value="Si" autocomplete="error">Si
                            <input id="ITDSindromico1" class="styled" onclick="habilitarInputsindrómico(this.value);" type="radio" disabled asp-for="ItsDiagnosticoPresuntivo" name="ItsDiagnosticoPresuntivo" value="No" autocomplete="error"> No
                            <br>
                            <br>
                            <input id="chkITS1" disabled asp-for="SecrecionUretral" name="SecrecionUretral" class="sindromico " type="radio" value="true" disabled> Secrecion Uretral
                            <br>
                            <input id="chkITS2" disabled asp-for="SecrecionVaginal" name="SecrecionVaginal" class="sindromico" type="radio" value="true" disabled> Secrecion Vaginal
                            <br>
                            <input id="chkITS3" disabled asp-for="UlceraGenital" name="UlceraGenital" class="sindromico" type="radio" value="true" disabled> Ulcera genital
                            <br>
                            <input id="chkITS4" disabled asp-for="VerrugasGenitales" name="VerrugasGenitales" class="sindromico" type="radio" value="true" disabled> Verrugas genitales
                            <br>

                        </td>
                    </tr>
                    <tr id="sifilisBC">
                        <td id="sifilis" colspan="1">
                            <div class="form-group">
                                Sifilis(VDRL) Realizada:
                                <br>
                                <input disabled id="rdsifilis1" class="styled habilitarSifilisBC" asp-for="Sifilis" type="radio" name="Sifilis" value="No Reactivo"> No Reactivo
                                <input disabled id="rdsifilis2" class="styled habilitarSifilisBC" asp-for="Sifilis" type="radio" name="Sifilis" value="Reactivo"> Reactivo
                                <br>
                                <input disabled style="width:300px" id="txtfechasifilis1" onkeydown="return false" asp-for="SifilisFecha" name="SifilisFecha" class="habilitarSifilisBC form-control" type="date" placeholder="Fecha">
                            </div>
                        </td>
                        <td id="hepatitisB" colspan="2">
                            HBsAg Realizada:
                            <br>
                            <input id="rdHBsAg1" disabled class="styled habilitarSifilisBC" type="radio" asp-for="HbsAg" name="HbsAg" value="Negativo"> Negativo
                            <input id="rdHBsAg2" disabled class="styled habilitarSifilisBC" type="radio" asp-for="HbsAg" name="HbsAg" value="Positivo"> Positivo
                            <br>
                            <input style="width:300px" disabled id="txtfechaHBsAg1" onkeydown="return false" asp-for="HbsAgFecha" name="HbsAgFecha" class="habilitarSifilisBC form-control" type="date" placeholder="Fecha">


                        </td>

                        <td style="" id="hepatitisC" colspan="1">


                            Hepatitis C Realizada:
                            <br>
                            <input id="rdHepatitis1" disabled class="styled habilitarSifilisBC" type="radio" asp-for="HepatitisC" name="HepatitisC" value="Negativo"> Negativo
                            <input id="rdHepatitis2" disabled class="styled habilitarSifilisBC" type="radio" asp-for="HepatitisC" name="HepatitisC" value="Positivo"> Positivo
                            <br>
                            <input style="width:300px" onkeydown="return false" disabled id="txtfechaHepatitis" asp-for="HepatitisCFecha" name="HepatitisCFecha" class="habilitarSifilisBC form-control" type="date" placeholder="Fecha">
                        </td>

                    </tr>
                    <tr>
                        <td colspan="1">
                            Adherencia al uso del medicamento, cantidad de comprimidos omitidos en la ultima semana/7dias
                            <select class="form-control" id="ddlComprimidosOmitidos" style="width:200px" disabled asp-for="AdherenciaCantidadComprimidos" name="AdherenciaCantidadComprimidos">
                                <option value="-1">--Seleccione--</option>
                                <option value="Más de 2 comprimidos (No adherente)">Más de 2 comprimidos (No adherente)</option>
                                <option value="Menos de 2 comprimidos (Poco adherente)">Menos de 2 comprimidos (Poco adherente)</option>
                                <option value="No Sabe">No Sabe</option>
                                <option value="Sin Falla(Adherente)">Sin Falla(Adherente)</option>
                            </select>
                        </td>
                        <td colspan="2">
                            ¿Se le ha brindado asesoramiento sobre la adherencia al medicamento?
                            <br>
                            <div class="radio radio-info">
                                <input id="AsesoriaMedicamento1" disabled asp-for="AsesoramientoAdherencia" name="AsesoramientoAdherencia" class="styled" type="radio" value="Si">
                                <label for="AsesoriaMedicamento1">
                                    Si
                                </label>
                            </div>
                            <div class="radio radio-info">
                                <input id="AsesoriaMedicamento2" disabled asp-for="AsesoramientoAdherencia" name="AsesoramientoAdherencia" class="styled" type="radio" value="No">
                                <label for="AsesoriaMedicamento2">
                                    No
                                </label>
                            </div>
                        </td>
                        <td colspan="1">
                            ¿Se le ha brindado asesoramiento sobre la reducción de riesgos?
                            <br>
                            <div class="radio radio-info">
                                <input id="AsesoriaRiegos1" disabled asp-for="AsesoramientoRiesgos" name="AsesoramientoRiesgos" class="styled" type="radio" value="Si">
                                <label for="AsesoriaRiegos1">
                                    Si
                                </label>
                            </div>
                            <div class="radio radio-info">
                                <input id="AsesoriaRiegos2" disabled asp-for="AsesoramientoRiesgos" name="AsesoramientoRiesgos" class="styled" type="radio" value="No">
                                <label for="AsesoriaRiegos2">
                                    No
                                </label>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            ¿Se han entregado condones?
                            <br>
                            <div class="radio radio-info">
                                <input id="Condones1" disabled asp-for="EntregaCondones" name="EntregaCondones" class="styled" type="radio" value="Si">
                                <label for="Condones1">
                                    Si
                                </label>
                            </div>
                            <div class="radio radio-info">
                                <input id="Condones2" disabled asp-for="EntregaCondones" name="EntregaCondones" class="styled" type="radio" value="No">
                                <label for="Condones2">
                                    No
                                </label>
                            </div>
                        </td>


                    </tr>
                    <tr>
                        <td colspan="1">
                            Repetición de la PrEP prescrita:
                            <br>
                            ARV Prescritos
                            <br>
                            <input type="radio" disabled onclick="ARV(this.id);" id="td1" asp-for="PrepArvTdfFtc" name="PrepArvTdfFtc" value="true">
                            TDF/FTC
                            <br>
                            <input type="radio" disabled onclick="ARV(this.id);" id="td2" asp-for="PrepArvTdf3tc" name="PrepArvTdf3tc" value="true">
                            TDF/3TC
                            <br>
                            <input type="radio" disabled onclick="ARV(this.id);" id="td3" asp-for="PrepArvTafFtc" name="PrepArvTafFtc" value="true">
                            TAF/FTC


                        </td>
                        <td colspan="2">
                            Meses de prescripción

                            <select id="Meses_prescripcion" style="width:300px;" disabled asp-for="MesesPrescripcion" name="MesesPrescripcion" class="form-control">
                                <option value="">--Seleccione--</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                            </select>


                        </td>
                        <td colspan="1">
                            <div class="form-group ">
                                Fecha Proximo seguimiento:
                                <input id="FechaProximoSeguimiento" onkeydown="return false" disabled asp-for="FechaProximoSeguimiento" name="FechaProximoSeguimiento" class="form-control col-5 date" type="date">
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="4">
                            Observaciones:
                            <input type="text" id="Observaciones" disabled asp-for="Observaciones" name="Observaciones" class="form-control">
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div id="divMensaje" style="color:red;">
    </div>

    <div style="margin-block-end:40px">
        <a name="Cancelar" id="Cancelar" onclick="history.back():" class="btn btn-danger"><i class="glyphicon glyphicon-remove"></i>Regresar</a>

    </div>

    <div class="modal" id="menor" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" style="color:red; margin-left: 90px;">
                        Advertencia
                    </h5>
                    <button type="button" onclick="cerrarModalMenor();" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p id="cuerpoModalMenor" style="text-align:center">tiene un aclaramiento menor a 60, se rechaza la solicitud. ¿Estas seguro de este resultado?</p>

                </div>
                <div class="modal-footer">
                    <button type="button" onclick="creatininaMenor60();" class="btn btn-secondary " data-dismiss="modal">Aceptar</button>
                    <button type="button" onclick="cerrarModalMenor();" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal" id="vih" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" style="color:red; margin-left: 90px;">
                        Advertencia
                    </h5>
                    <button type="button" onclick="cerrarModalVIH();" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p id="cuerpoModalvih" style="text-align:center">¿Esta seguro de este resultado?</p>

                </div>
                <div class="modal-footer">
                    <button type="button" onclick="VIHPositivo();" class="btn btn-secondary " data-dismiss="modal">Aceptar</button>
                    <button type="button" onclick="cerrarModalVIH();" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>

    <script>

    </script>

</form>



