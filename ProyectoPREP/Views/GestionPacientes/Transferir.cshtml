                            <option value="1653">[R2] - CENTRO DE PROMOCION Y SOLIDARIDAD HUMANA</option>
                            <option value="1676">[R2] - JOSE MARIA CABRAL Y BAEZ</option>
                            <option value="60">[R2] - RICARDO LIMARDO</option>
                            <option value="118">[R5] - CLINICA DE FAMILIA LA ROMANA</option>
                            <option value="1329">[R5] - ESPERANZA Y CARIDAD</option>
                            <option value="116">[R5] - NUESTRA SENORA DE LA ALTAGRACIA</option>
                            <option value="1265">[R5] - VERON</option>
                            <option value="154">[R8] - DR LUIS MORILLO KING</option>
                        </select>
                    </td>

                </tr>
                <tr>
                    <td colspan="3">
                        <div id="divBotones">
                            <button type="submit" name="Aceptar" id="Aceptar" class="btn btn-primary" ><i class="glyphicon glyphicon-saved"></i>Aceptar</button>
                            <a onclick="history.back();" name="Retornar" id="Retornar" class="btn btn-danger"><i class="glyphicon glyphicon-remove"></i>Retornar</a>
                        </div>
                        <br>
                       
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</form>