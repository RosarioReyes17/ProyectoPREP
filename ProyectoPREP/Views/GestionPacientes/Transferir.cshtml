                <th>Fecha Ingreso PrEP:</th>
                <th>Procedencia</th>
                <th>Estatus Transferencia</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @ViewBag.idDatos
                </td>
                <td>
                    pp

                </td>
                <td>
